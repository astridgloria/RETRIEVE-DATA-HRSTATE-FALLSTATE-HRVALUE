<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/phone1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="66dp"
        android:ems="10"
        android:hint="insert phone number"
        android:inputType="phone"
        app:layout_constraintEnd_toEndOf="@+id/phone2"
        app:layout_constraintStart_toStartOf="@+id/phone2"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/phone2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="51dp"
        android:ems="10"
        android:hint="insert phone number"
        android:inputType="phone"
        app:layout_constraintEnd_toEndOf="@+id/phone3"
        app:layout_constraintStart_toStartOf="@+id/phone3"
        app:layout_constraintTop_toBottomOf="@+id/phone1" />

    <EditText
        android:id="@+id/phone3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="51dp"
        android:ems="10"
        android:hint="insert phone number"
        android:inputType="phone"
        app:layout_constraintEnd_toEndOf="@+id/phone4"
        app:layout_constraintStart_toStartOf="@+id/phone4"
        app:layout_constraintTop_toBottomOf="@+id/phone2" />

    <EditText
        android:id="@+id/phone4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="62dp"
        android:layout_marginTop="47dp"
        android:ems="10"
        android:hint="insert phone number"
        android:inputType="phone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/phone3" />

    <Button
        android:id="@+id/buttonPhone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SUBMIT"
        tools:layout_editor_absoluteX="118dp"
        tools:layout_editor_absoluteY="415dp" />
</android.support.constraint.ConstraintLayout>